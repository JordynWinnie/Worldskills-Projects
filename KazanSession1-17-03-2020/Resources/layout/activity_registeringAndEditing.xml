
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/regassetAssetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asset Name"

    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Spinner
            android:id="@+id/regAssetDepartmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>

        <Spinner
             android:id="@+id/regAssetLocationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Spinner
            android:id="@+id/regAssetAssetGroupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>

        <Spinner
             android:id="@+id/regAssetAccountablePartySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>
    </LinearLayout>

    <EditText
        android:id="@+id/regAssetAsetDescEdittxt"
        android:layout_width="match_parent"
        
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
            android:id="@+id/regAssetExpWarrantyEditTxt"
            android:hint="Expired Warranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>

        <TextView
             android:id="@+id/regAssetAssetSNTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        
        android:layout_weight = "50"/>
    </LinearLayout>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/regAssetCaptureImgBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_weight = "50"/>

        <Button
             android:id="@+id/regAssetBrowseImgBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Browse"
        android:layout_weight = "50"/>
    </LinearLayout>

    <ListView
        android:id="@+id/regAssetListView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:layout_weight="30"
    />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/regAssetSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_weight = "50"/>

        <Button
             android:id="@+id/regAssetCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_weight = "50"/>
    </LinearLayout>
</LinearLayout>