<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textAlignment="center"
        android:text="Add Sponsorship Packages"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Tier:"
            android:textSize="20dp"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/tierSpinnerSP"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Package Name:"
            android:textSize="20dp"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/packageNameSP"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Value:"
            android:textSize="20dp"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/valueSP"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Available Quantity:"
            android:textSize="20dp"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/quantitySP"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <TextView
        android:textSize="20dp"
        android:text="Filter by Benefit: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <CheckBox
            android:id="@+id/onlineCheckBoxSP"
            android:text="Online"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/flyerCheckBoxSP"
            android:text="Flyer"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/bannerCheckBoxSP"
            android:text="Banner"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <Button
        android:id="@+id/clearFormBtnSP"
        android:text="Clear Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <Button
        android:id="@+id/addPackageBtnSP"
        android:text="Add Package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
