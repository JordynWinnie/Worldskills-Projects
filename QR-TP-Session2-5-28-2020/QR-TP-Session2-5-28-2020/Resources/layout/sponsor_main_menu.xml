    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sponsor Main Menu"
        android:gravity="center|top"
        android:textSize="24dp"
    />

     <Button
        android:id="@+id/bookSponsorshipBtnMainMenu"
        android:text="Book Sponsorship Package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <Button
        android:id="@+id/updateSponsorshipBookngsBtnMainMenu"
        android:text="Update Sponsorship Package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
