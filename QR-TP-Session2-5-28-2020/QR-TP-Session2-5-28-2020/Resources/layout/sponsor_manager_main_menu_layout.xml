<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sponsor Manager Main Menu"
        android:gravity="center|top"
        android:textSize="24dp"
    />

     <Button
        android:id="@+id/viewSponsorShipPackageBtnSMMM"
        android:text="View Sponsorship Packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <Button
        android:id="@+id/addSponsorShipPackageBtnSMMM"
        android:text="Add Sponsorship Packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <Button
        android:id="@+id/approveSponsorShipBookingBtnSMMM"
        android:text="Approve Sponsorship Bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <Button
        android:id="@+id/viewSponsorShipSummaryBtnSMMM"
        android:text="View Sponsorship Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
