
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Sponsorship Packages"
        android:gravity="center|top"
        android:textSize="24dp"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Filter By Tier"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/tierSpinnerBookPackage"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Filter By Budget:"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/budgetTextViewBookPackage"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <TextView
        android:text="Filter by Benefit:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/onlineCheckBox"
            android:text="Online"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/flyerCheckBox"
            android:text="Flyers"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/bannerCheckBox"
            android:text="Banner"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Tier"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Name"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Value ($)"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Available Qty"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <ListView
        android:layout_weight="60"
        android:id="@+id/packagesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/benefitTextview"
        android:textSize="18dp"
        android:textStyle="italic"
        android:text="Click a package to view benefits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:textSize="16dp"
            android:text="Book Quantity:"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/quantityToBookEditText"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <Button
        android:id="@+id/bookPackageButton"
        android:text="Book Package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>