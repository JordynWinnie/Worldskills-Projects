<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/wellNameEditText"
        android:hint="Well Name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/depthOfGas"
            android:layout_weight="30"
        android:hint="Depth of Gas/Oil Extraction"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/wellCapacityEditText"
            android:layout_weight="50"
        android:hint="Well Capacity"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:text="Rock Layers:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/rockLayerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/fromDepthEdiText"
            android:layout_weight="33"
            android:hint="From Depth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/toDepthEditText"
            android:layout_weight="33"
            android:hint="To Depth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addLayersButton"
            android:layout_weight="33"
            android:text="Add Layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <ListView
        android:id="@+id/layerList"
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="italic"
        android:text="Remove a layer by clicking on it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/submitBtn"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/connectionStatus"
        android:text="Connection Status:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>