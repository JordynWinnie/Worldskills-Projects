<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/assetNameSc2"
        android:hint="Asset Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Spinner
            android:id="@+id/departmentSpinnerSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/locationSpinnerSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Spinner
            android:id="@+id/assetGroupSpinnerSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/accountablePartySc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <EditText
        android:id="@+id/assetDescSc2"
        android:hint="Asset Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <EditText
            android:focusable="false"
            android:hint="Expired Warranty"
            android:id="@+id/expiredWarrantySc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Asset SN:"
            android:id="@+id/assetSNSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Button
            android:text="Capture Image"
            android:id="@+id/captureImageBtnSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Browse"
            android:id="@+id/browseImageBtnSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <ListView
        android:id="@+id/pictureListSc2"
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Button
            android:text="Submit"
            android:id="@+id/submitBtnSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Cancel"
            android:id="@+id/cancelBtnSc2"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
</LinearLayout>
