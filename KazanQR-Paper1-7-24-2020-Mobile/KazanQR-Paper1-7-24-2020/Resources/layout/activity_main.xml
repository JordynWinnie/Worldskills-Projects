<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/departmentSpinnerAsset"
            android:layout_weight="50"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <Spinner
            android:id="@+id/assetGroupSpinnerAsset"
            android:layout_weight="50"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <TextView
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Warranty Date Range:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Start Date"
            android:focusable="false"
            android:id="@+id/startDate"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <EditText
            android:hint="End Date"
            android:focusable="false"
            android:id="@+id/endDate"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <EditText
        android:id="@+id/searchBarEditText"
        android:hint="Search..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16dp"
        android:text="Asset List:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/assetListView"
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="50"
            android:id="@+id/assetCountTextView"
            android:text="AssetCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addButton"
            android:text="+"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
</LinearLayout>