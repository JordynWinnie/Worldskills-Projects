<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/assetNameGrid"
            android:text="AssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/departmentNameGrid"
            android:text="DepartmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/assetSNGrid"
            android:text="AssetSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
    <LinearLayout
        android:layout_weight="50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/editButtonGrid"
            android:layout_weight="33"
            android:text="E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/moveButtonGrid"
            android:layout_weight="33"
            android:text="M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/historyButtonGrid"
            android:layout_weight="33"
            android:text="H"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
</LinearLayout>
