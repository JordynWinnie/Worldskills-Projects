<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/assetName"
        android:hint="Asset Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    
        <Spinner
            android:id="@+id/departmentSpinner"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    
        <Spinner
            android:id="@+id/assetGroupSpinner"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/accountablePartySpinner"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <EditText
        android:id="@+id/assetDescriptionEditText"
        android:hint="Asset Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    
        <EditText
            android:id="@+id/expiredWarrantyEditText"
            android:hint="Expired Warranty"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAlignment="center"
            android:text="Asset SN: 00/00/2020"
            android:id="@+id/assetSNTextView"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    
        <Button
            android:id="@+id/submitButton"
            android:text="Submit"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:textAlignment="center"
            android:text="Cancel"
            android:id="@+id/cancelButton"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
</LinearLayout>
