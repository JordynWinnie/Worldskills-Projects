
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/taskNameSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/assetNameSpinner"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addToListButton"
            android:text="Add To list"
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <ListView
        android:id="@+id/assetListTasks"
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Tip: You may click on any item to delete it from the list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/scheduleModelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/startEditText"
            android:hint="Start Date"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>    
         <EditText
            android:id="@+id/endEditText"
            android:hint="End Date"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/> 
    </LinearLayout>/>

    <EditText
        android:id="@+id/changePerKM"
        android:hint="Change / KM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="50"
            android:id="@+id/submitBtn"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="50"
            android:id="@+id/cancelBtn"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>


</LinearLayout>