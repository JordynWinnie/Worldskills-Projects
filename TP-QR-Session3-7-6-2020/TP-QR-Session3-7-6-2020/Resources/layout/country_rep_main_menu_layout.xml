<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     
    <TextView
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:text="Country Representative Main Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/confirmArrivalDetailsBtnCRMM"
        android:text="Confirm Arrival Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/hotelBookingBtnCRMM"
        android:text="Hotel Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/updateInfoBtnCRMM"
        android:text="Update Info / Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
