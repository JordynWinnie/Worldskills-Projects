<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Hotel Booking"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Hotel Name:"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/hotelNameTextViewHotelBooking"
            android:text="HotelName"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>
    <TextView
        android:paddingTop="8dp"
        android:text="Number of Pax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delegateNumberTextViewHotelBooking"
            android:text="DelegateNumber"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:text="Delegates"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/competitorNumberTextViewHotelBooking"
            android:text="CompetitorNumber"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:text="Competitors"
            android:textAlignment="center"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Room Type"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:textStyle="bold"
            android:text="Room Rate \nPer Night ($)"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:textStyle="bold"
            android:text="Available No of Rooms"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            
            android:text="Single"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/singleRateTextviewHotelBooking"
            android:text="singleRate"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/numberOfSingleRmTextviewHotelBooking"
            android:text="singleRoomNo"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            
            android:text="Double"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/doubleRateTextviewHotelBooking"
            android:text="doubleRate"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/numberOfDoubleRmTextviewHotelBooking"
            android:text="doubleRoomNo"
            android:textAlignment="center"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="33"
            android:textAlignment="center"
            android:text="Single Rooms Required:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/SingleRmEditTextHotelBooking"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subtotalSingleRmTextviewHotelBooking"
            android:textAlignment="center"
            android:text="subTotalSingleRm"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="33"
            android:textAlignment="center"
            android:text="Double Rooms Required:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/DoubleRmEditTextHotelBooking"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subtotalDoubleRmTextviewHotelBooking"
            android:textAlignment="center"
            android:text="subTotalDoubleRm"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="50"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Total Cost:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/totalCostTextviewHotelBooking"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <Button
        android:id="@+id/bookBtnHotelBooking"
        android:text="Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
