<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
        android:textAlignment="center"
        android:textSize="24dp"
        android:text="Arrival Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <TextView
        android:text="Hotel Selection:"
        android:textSize="16dp"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/hotelSelectionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:textStyle="bold"
            android:layout_weight="33"
            android:text="Country"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="33"
            android:text="No of Single Rooms Booked"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="33"
            android:text="No of Double Rooms Booked"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <ListView
        android:id="@+id/listViewArrivalSummary "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
