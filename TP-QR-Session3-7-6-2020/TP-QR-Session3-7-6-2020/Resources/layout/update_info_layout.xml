<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Update Info/Booking"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        
        android:text="Number of Pax:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Head of Delegation:"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/headOfDeleEditTextUpdateInfo"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Delegates:"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/delegatesEditTextUpdateInfo"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Competitors:"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/competitorsEditTextUpdateInfo"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Room\nType"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:textStyle="bold"
            android:text="Room Rate \nPer Night ($)"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:textStyle="bold"
            android:text="Available No of Rooms"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:text="Rooms Booked"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Single"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/singleRateTextviewUpdateInfo"
            android:text="singleRate"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/numberOfSingleRmTextviewUpdateInfo"
            android:text="singleRoomNo"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/oldNumberOfSingleRmTextviewUpdateInfo"
            android:text="oldsingleRoomNo"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Double"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/doubleRateTextviewUpdateInfo"
            android:text="doubleRate"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/numberOfDoubleRmTextviewUpdateInfo"
            android:text="doubleRoomNo"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/oldNumberOfDoubleRmTextviewUpdateInfo"
            android:text="oldDoubleRoomNo"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="33"
            android:textAlignment="center"
            android:text="Single Rooms Required:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/SingleRmEditTextUpdateInfo"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subtotalSingleRmTextviewUpdateInfo"
            android:textAlignment="center"
            android:text="subTotalSingleRm"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="33"
            android:textAlignment="center"
            android:text="Double Rooms Required:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/DoubleRmEditTextUpdateInfo"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subtotalDoubleRmTextviewUpdateInfo"
            android:textAlignment="center"
            android:text="subTotalDoubleRm"
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <LinearLayout
        android:paddingTop="16dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="50"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Total Cost:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/totalCostTextviewUpdateInfo"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>/>

    <Button
        android:id="@+id/updateBtnUpdateInfo"
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
