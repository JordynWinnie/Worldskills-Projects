<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:text="Admin Main Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/arrivalSummaryBtnAMM"
        android:text="Arrival Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/hotelSummaryBtnAMM"
        android:text="Hotel Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/guestsSummaryBtnAMM"
        android:text="Guests Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
