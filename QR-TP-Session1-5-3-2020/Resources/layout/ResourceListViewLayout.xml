<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="4dp"
        android:id="@+id/nameResourceListView"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
        android:padding="4dp"
        android:id="@+id/typeResourceListView"
        android:text="Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
        android:padding="4dp"
        android:id="@+id/noOfSkillResourceListView"
        android:text="No.OfSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
        android:padding="4dp"
        android:id="@+id/allocatedSkillResourceListView"
        android:text="AllocSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
        android:padding="4dp"
        android:id="@+id/quantityResourceListView"
        android:text="Quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
