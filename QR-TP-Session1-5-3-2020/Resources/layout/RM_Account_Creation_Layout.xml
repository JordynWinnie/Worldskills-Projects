
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="New Account Creation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="left|center"
            android:layout_weight="50"
            android:text="Username:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/usernameFieldRmAccountCreation"
            android:layout_weight="50"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>/>
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="left|center"
            android:layout_weight="50"
            android:text="UserID (for Login):"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/userIDEditTxtRmAccountCreation"
            android:layout_weight="50"
            android:hint="UserID (Min. 8 Char)"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="left|center"
            android:layout_weight="50"
            android:text="Password:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/passwordEditTxtRmAccountCreation"
            android:inputType="textPassword"
            android:layout_weight="50"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="left|center"
            android:layout_weight="50"
            android:text="Re-Enter Password:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/confirmPasswordEditTxtRmAccountCreation"
            android:inputType="textPassword"
            android:layout_weight="50"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="left|center"
            android:layout_weight="50"
            android:text="User Type:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/userTypeSpinnerRMAccountCreation"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>/>
    
    <Button
        android:id="@+id/createAccountBtnRmAccountCreation"
        android:text="Create Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>