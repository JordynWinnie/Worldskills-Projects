
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Selected Asset"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Asset Name:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Current Department:"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/assetTransferAssetNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textSize = "18dp"
            android:textStyle = "bold"
            android:text="AssetName" />
        <TextView
            android:id="@+id/assetTransferCurrentDepartmentTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textSize = "18dp"
            android:textStyle = "bold"
            android:text="CurrentDepartment" />

    </LinearLayout>

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asset SN:"/>
    <TextView
        android:id = "@+id/assetTransferAssetSN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "18dp"
        android:textStyle = "bold"
        android:text="AssetSN"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Destination Asset"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"

            android:text="Destination Department" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
 
            android:text="Destination Location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/assetTransferDestinationDepartmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"/>
        <Spinner
            android:id="@+id/assetTransferDestinationLocationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"/>

    </LinearLayout>

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asset SN:"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="00/00/0000"
        android:id="@+id/assetTransferNewAssetSN"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/assetTransferSubmitBtn"
    />
     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assetTransferCancelBtn"
        android:text="Cancel"
    />
    
</LinearLayout>